{{#content}}
  {{#main}}    
    <a id="main-content"></a>
    <div class="view-content">
      <h1 class="title" id="page-title">{{title}}</h1>
      <p>{{description}}</p>
      <h2>Interviews:</h2>
      <div class="field-items">
        {{#interviews}}    
          <div class="field-item interview">
            <h3>{{title}}</h3>
            <iframe src="{{embed}}"></iframe>
            <ul>
              <li>Date: {{date}}</li>
              <li>Citation URL: <a href="{{handle}}">{{handle}}</a></li>
              <li>Download the transcript: <a href="{{transcript}}">{{title}}</a></li>
            </ul>            
          </div>
        {{/interviews}}
      </div>
    </div>
  {{/main}}
{{/content}}
